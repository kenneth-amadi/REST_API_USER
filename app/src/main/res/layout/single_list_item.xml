<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/textColorSecondaryDark"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:id="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_person_pin_24" />

        <TextView
            android:id="@+id/pNametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:textColor="@color/textColorSecondaryDark"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/userImg"
            android:maxLines="1"
            android:text="User Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pJobProfiletxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pNametxt"
            android:textColor="@color/textColorSecondary"
            android:layout_alignStart="@+id/pNametxt"
            android:maxLines="1"
            android:text="Job Profile"
            android:textSize="14sp" />

    </RelativeLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/singleRow"
        android:background="@color/lineBackground" />-->

</com.google.android.material.card.MaterialCardView>